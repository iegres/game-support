@model IEnumerable<GameSupport.Models.Player>

@{
    ViewData["Title"] = "Список диалогов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Игроки</h1>

<table class="table">
    <thead>
        <tr>
            <th>Никнейм</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-page="1">Перейти к диалогу</a>
            </td>
        </tr>
}
    </tbody>
</table>
